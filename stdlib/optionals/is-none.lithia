package optionals

import booleans

func isNone {
  Optional(
    Some: { _ => booleans.False },
    None: { _ => booleans.True },
  )
}

describe "is none", { it =>
  it "true for none", { expect =>
    expect isNone None
  }
  
  it "false for some", { expect =>
    expect booleans.not isNone Some(value: 41)
    expect booleans.not isNone Some(value: None)
  }
}
