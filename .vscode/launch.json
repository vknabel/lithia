    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run example stdlib",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/lithia/main.go",
            "args": [
                "${workspaceFolder}/stdlib/stdlib-tests.lithia"
            ],
            "env": {
                "LITHIA_STDLIB": "${workspaceFolder}/stdlib"
            }
        },
        {
            "name": "Test example stdlib",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/lithia/main.go",
            "args": [
                "${workspaceFolder}/stdlib/stdlib-tests.lithia"
            ],
            "env": {
                "LITHIA_TESTS": "1",
                "LITHIA_STDLIB": "${workspaceFolder}/stdlib"
            }
        },
        {
            "name": "Launch lithia",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/lithia/main.go",
            "args": [
                "${workspaceFolder}/examples/syntax.lithia"
            ],
            "env": {
                "LITHIA_STDLIB": "${workspaceFolder}/stdlib"
            }
        },
    ]
}