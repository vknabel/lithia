enum Bool {
  data True
  data False
}

func if { condition, then, else =>
  Bool(
    True: { _ => then },
    False: { _ => else }
  ) condition
}

func and { lhs, rhs =>
  if lhs, (if rhs, True, False), False
}

func or { lhs, rhs =>
  if lhs, True, rhs
}

func not { flag =>
  if flag, False, True
}